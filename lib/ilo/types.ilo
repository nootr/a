const TYPE_BOOL 1
const TYPE_CHAR 2
const TYPE_INT  3
const TYPE_PTR  4
const TYPE_VOID 5


def type_to_str: int type -> ptr
    # Returns the string representation of a given type
    type TYPE_BOOL = if
        "BOOL"
    elif type TYPE_CHAR =
        "CHAR"
    elif type TYPE_INT =
        "INT"
    elif type TYPE_PTR =
        "PTR"
    elif type TYPE_VOID =
        "VOID"
    else
        "Unknown type" raise "UNKNOWN"
